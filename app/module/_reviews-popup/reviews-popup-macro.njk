{% macro reviews_popup(id_popup, title_popup, text, form_id, form_name, id_thanks, title_thanks, text_thanks, path_thanks_img, thanks_img_extension) %}
  <!-- reviews__popup -->
	<div class="popup reviews-popup" id={{id_popup}}>
		<h2 class="title reviews-popup__title">{{title_popup}}</h2>
		<p class="reviews-popup__text reviews-popup__text--main">
			{{text}}
		</p>
		<form class="reviews-popup__form" id="{{form_id}}" name="{{form_name}}">
			<textarea class="reviews-popup__form-textarea" name="review" rows="12" placeholder="Ваш отзыв" required></textarea>
  		<div class="reviews-popup__form-bottom">
				<input class="contact-form__input reviews-popup__form-input reviews-popup__form-input--name" type="text" name="Name" placeholder="Ваше имя" required>
				<input class="contact-form__input reviews-popup__form-input reviews-popup__form-input--email" type="email" name="email" placeholder="Электронная почта" required>
  		<div class="reviews-popup__form-btn-wrapper">
					<button class="reviews-popup__form-btn" type="submit">Отправить</button>
					<p class="reviews-popup__form-btn-wrapper-text">
						Нажимая на кнопку,<br>вы соглашаетесь с нашей
						<a class="reviews-popup__link" href="#" target="_blank">политикой конфиденциальности</a>
							</p>
						</div>
					</div>
		</form>
	</div>
  <!-- /reviews__popup -->
	<!-- reviews__thanks -->
	<div class="popup reviews-popup reviews-thanks" id="{{id_thanks}}">
		<h2 class="title reviews-popup__title">{{title_thanks}}</h2>
		<p class="reviews-popup__text">
		  {{text_thanks}}
		</p>
			<picture>
				<source srcset="{{path_thanks_img}}.avif" type="image/avif">
        <source srcset="{{path_thanks_img}}.webp" type="image/webp">
  			<img class="reviews-thanks__img" src="{{path_thanks_img}}.{{thanks_img_extension}}" alt="">
			</picture>
				</div>
	<!-- /reviews__thanks -->
{% endmacro %}